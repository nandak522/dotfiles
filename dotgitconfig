[apply]
    whitespace = warn
[alias]
    st = status
    ci = commit
    amend = commit --amend
    co = checkout
    br = branch
    pick = add -p
    lg = log --graph --date=short --date-order
    pur = pull --rebase
    prom = pull --rebase origin master
    pom = push origin master
    what = whatchanged -p
    df = diff --color-words
    di = diff --ignore-space-change
    staged = diff --cached
    unstage = reset HEAD
    credits = shortlog -sn --no-merges
    changelog = log --pretty=oneline --abbrev-commit --graph
    cherry = cherr-pick
    throw = checkout -p
[color]
    branch = auto
    diff = auto
    interactive = auto
    ui = always
    pager = true
[color "status"]
    untracked = black
    changed = red
    added = green
[format]
#    pretty="%Cgreen%h %Cred%ar %C(yellow)%d %Creset%s %Cblue<%an> %Cred(%ad)"
    pretty="%Cgreen%h %Cred%ar(%ad) %C(yellow)%d %Creset%s %Cblue<%an>"
