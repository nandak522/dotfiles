    unstage = reset HEAD
    credits = shortlog -sn --no-merges
    changelog = log --pretty=oneline --abbrev-commit --graph
[color]
    branch = auto
    diff = auto
    interactive = auto
    ui = always
    pager = true
[color "status"]
    untracked = black
    changed = red
    added = green
[format]
    pretty="%Cgreen%h %Cred%ar(%ad) %Cblue(%an) %C(yellow)%d %Creset%s"
