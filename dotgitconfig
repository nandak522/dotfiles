[alias]
    st = status
    ci = commit
    amd = commit --amend
    uncommit = reset HEAD^
    co = checkout
    br = branch
    pick = add -p
    pl = pull --verbose
    lg = log --graph --date=short --date-order
    lt = log --graph --date=short --topo-order
    pur = pull --rebase
    prom = pull --rebase origin master
    rc = rebase --continue
    ra = rebase --abort
    pom = push origin master
    what = whatchanged -p
    df = diff --color-words
    di = diff --ignore-space-change
    dt = difftool
    staged = diff --cached
    unstage = reset HEAD
    credits = shortlog -sn --no-merges
    changelog = log --pretty=oneline --abbrev-commit --graph
    rlog = reflog --pretty=reflog
    cherry = cherry-pick
    throw = checkout -p
    dis = checkout -p
    goback = reset --hard
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    last = log -1 --pretty=last
[blame]
    date=short
[color]
    branch = auto
    diff = auto
    interactive = auto
    ui = always
    pager = true
[color "status"]
    untracked = black
    changed = red
    added = green
[format]
