[apply]
	whitespace = warn
[alias]
	st = status
	co = checkout
	conew = checkout -b
	ci = commit
	ciamd = commit --amend
	br = branch
	pick = add -p
	pl = pull --verbose
	lg = log --graph --date=short --date-order
	lt = log --graph --date=short --topo-order
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
	ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	pur = pull --rebase
	ponew = push -u origin
	pobr = push origin
	goback = reset --hard
	sync = pull zeomega
	cpick = cherr-pick
	what = whatchanged -p
   	df = diff --color-words
	di = diff --ignore-space-change
	staged = diff --cached
	unstage = reset HEAD
	credits = shortlog -sn --no-merges
	changelog = log --pretty=oneline --abbrev-commit --graph
	goback = reset --hard
[blame]
	date=short
[core]
	excludesfile = ~/.gitignore
[color]
	ui = always
	pager = true
[color "status"]
	untracked = yellow
	changed = red
	added = green
[format]
	pretty="%Cgreen%h %Cred%ar(%ad) %Cblue<%an> %C(yellow)%d %Creset%s"
